


@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <title>CSS3登录注册切换动画模板 - 站长素材</title>
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/Loginstyle.css" rel="stylesheet" />

</head>
<body>
    <div class="materialContainer">
        <div class="box">
            <div class="title">登录</div>
            <div class="input">
                <label for="name">用户名</label>
                <input type="text" name="name" id="phonenumber">
                <span class="spin"></span>
            </div>
            <div class="input">
                <label for="pass">密码</label>
                <input type="password" name="pass" id="password">
                <span class="spin"></span>
            </div>
            <div class="button login">
                <button>
                    <span>登录</span>
                    <i class="fa fa-check" id="test"></i>
                </button>
            </div>
            <a href="javascript:" class="pass-forgot" id="wang">忘记密码？</a>
        </div>

        <div class="overbox">
            <div class="material-button alt-2">
                <span class="shape"></span>
            </div>
            <div class="title">注册</div>
            <div class="input">
                <label for="regname">用户名</label>
                <input type="text" name="regname" id="regname">
                <span class="spin"></span>
            </div>
            <div class="input">
                <label for="regpass">密码</label>
                <input type="password" name="regpass" id="regpass">
                <span class="spin"></span>
            </div>
            <div class="input">
                <label for="reregpass">确认密码</label>
                <input type="password" name="reregpass" id="reregpass">
                <span class="spin"></span>
            </div>
            <div class="button">
                <button>
                    <span>注册</span>
                </button>
            </div>
        </div>

    </div>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/index.js"></script>
    <script>
        $("#test").click(function () {
            var PhoneNumber = $("#phonenumber").val();
            var PassWord = $("#password").val();
            if (PhoneNumber == "" || PassWord=="") {
                alert("用户名密码不能为空！");
                return;
            }
            $.ajax({
                url: "http://localhost:53336/api/UserInfo/InfoResponse",
                type: "POST",
                data: {
                    PhoneNumber: PhoneNumber,
                    PassWord: PassWord
                },
                dataType:'json',
                success: function (d) {
                    if (d>0) {
                        alert("登陆成功");
                        //location.href = "";
                    }
                    else {
                        alert("登陆失败！");
                    }
                }
            })
        })

    </script>
</body>
</html>




